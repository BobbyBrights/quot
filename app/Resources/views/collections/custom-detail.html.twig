{% extends 'base.html.twig' %}

{% block title %}Quot - Perzonalizaci√≥n{% endblock %}

{% block body %}
    <div id="custom_detail">
      <div class='row'>
        <div class='col-md-12'>
          <div class='user-form-wrapper'>
            <div class='user-form'>
              <h1>Cargando...</h1>
              {% image '%kernel.root_dir%/Resources/public/images/spinner_two.gif' %}
                <img src="{{ asset_url }}" width='100%'/>
              {% endimage %}
            </div>
          </div>
        </div>
      </div>
    </div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script>
        $(document).ready(function(){
            $.ajax({
                url: "/personalizar/detalle-ajax",
                data: {'vidParent':'{{ vidParent }}', 'vid':'{{ vid }}', 'child':'{{ child }}', 'vchild':'{{ vchild }}', 'child1':'{{ child1 }}', 'vchild1':'{{ vchild1 }}',  'child2':'{{ child2 }}',  'vchild2':'{{ vchild2 }}',  'size':'{{ size }}'},
                type: "get",
                success: function(data){
                    $('#custom_detail').html(data);
                }
            });
        });

        function loadPage(url){
            $.ajax({
                url: url,
                type: "get",
                success: function(data){
                    $('#custom_detail').html(data);
                }
            });
        }

        function changeImg(key, urlNext, urlPrev){
            $('#btn_next').attr('onclick', 'loadPage("' + urlNext + '")');
            $("div[id*='detail_']").css('display', 'none');
            $("#detail_" + key).css('display', 'block');
            if($('#radio01').is(':checked')){
                $("#detail_" + key + " #combination_1").css('display', 'block');
            } else{
                $("#detail_" + key + " #combination_0").css('display', 'block');
            }
        }
        
        function changeCom(id){
            var hrefCom = $('#final_shirt').attr('href');
            if(id == '1'){                
                var hrefFinal = hrefCom.replace("&com=0", "&com=1");
                $('#final_shirt').attr('href', hrefFinal);
                $('#btn_next_f').attr('href', hrefFinal);
            } else{
                var hrefFinal = hrefCom.replace("&com=1", "&com=0");
                $('#final_shirt').attr('href', hrefFinal);
                $('#btn_next_f').attr('href', hrefFinal);
            }
            $("div[id*='combination_']").css('display', 'none');
            $("#combination_" + id).css('display', 'block');
        }
  </script>
{% endblock %}
