{% set sizes = data.sizes|split(',') %}
<div class='product-teaser'>
    <a class='shirt-block bk-ancla' href="#ancla_{{ data.vid }}">
        <div class='shirt-image'>
          <img src="{{ data.images.0 }}" alt="cellphone"/>
        </div>
        <h4>{{ data.title }}</h4>
    </a>
    <div class='product-price'>
      <div class='row'>
        <div class='col-md-7'>
          ${{ data.price }}
        </div>
        <div class='col-md-5'>
          <div class="dd div_{{ data.vid }} wrapper-dropdown-5" tabindex="1"><span>Talla</span>
						<ul id="select_{{ data.vid }}" class="dropdown">
              {% for size in sizes %}
                <li><a>{{ size }}</a></li>
              {% endfor %}
						</ul>
					</div>
        </div>
      </div>
    </div>
    <div id="count_shirt_{{ data.vid }}" class='product-stock'>
        {% set count = 'countShirt_' ~  data.vid %}
        {{ app.session.get(count) }} de 50
    </div>
    <div class="product-custom">
      <div class="product-customize-link">
        <a onclick="generateLink('{{ vid_parent }}','{{ data.vid }}')" href="#">Personalizar</a>
      </div>
      <div class="product-customize-cart">
        <a href="#">agregar a compras</a>
      </div>
    </div>
</div>