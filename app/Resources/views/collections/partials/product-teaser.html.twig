{% set sizes = data.sizes|split(',') %}
<div class='product-teaser'>
    <a class='shirt-block bk-ancla' href="#ancla_{{ data.vid }}">
        <div class='shirt-image'>
          <img src="{{ data.images.0 }}" alt="cellphone"/>
        </div>
        <h4>{{ data.title }}</h4>
    </a>
    <div class='product-price'>
      <div class='row'>
        <div class='col-md-7'>
          ${{ data.price }}
        </div>
        <div class='col-md-5'>
          <div class="dd wrapper-dropdown-5" tabindex="1"><span>Talla</span>
						<ul class="dropdown">
              {% for size in sizes %}
                <li><a>{{ size }}</a></li>
              {% endfor %}
						</ul>
					</div>
        </div>
      </div>
    </div>
    <div class='product-stock'>
      20 de 50
    </div>
    <div class="product-custom">
        <a href="/personalizar/{{ vid_parent }}/{{ data.vid }}">Personalizar</a>
        <a href="#">agregar a compras</a>
    </div>
</div>
